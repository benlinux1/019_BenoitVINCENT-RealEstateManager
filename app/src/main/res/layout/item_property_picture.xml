<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/property_picture_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/property_picture_content_description" />

        <TextView
            android:id="@+id/property_picture_description"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@color/backgroundTransparent"
            android:gravity="center"
            android:text="@string/property_picture_description"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@id/property_picture_item"
            app:layout_constraintStart_toStartOf="@id/property_picture_item"
            app:layout_constraintEnd_toEndOf="@id/property_picture_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>